# {{ansible_managed}}

#
# LDAP Defaults
#

# See ldap.conf(5) for details
# This file should be world readable but not world writable.

BASE	{{ldap_server_base_dn}}
URI	{{ldap_server_uri}}

#SIZELIMIT	12
#TIMELIMIT	15
#DEREF		never

# TLS certificates (needed for GnuTLS)
TLS_CACERT     {{ssl_cert_dir}}/{{ldap_server_host}}__chain.pem
TLS_REQCERT	hard
TLS_CIPHER_SUITE	{{(ldap_server_ssl_type | ssl_config('gnutls'))['ciphers']}}
